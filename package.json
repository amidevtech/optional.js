{
  "name": "@amidevtech/optional.js",
  "version": "1.1.7",
  "description": "Provide Optional functionality for null/undefined safety!",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "optional",
    "optional.js",
    "undefined safety",
    "null safety",
    "java",
    "array",
    "array safety",
    "async"
  ],
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "author": "amidevtech <libraries@amidev.tech>",
  "repository": "https://github.com/amidevtech/optional.js",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "jest": "^26.6.3",
    "prettier": "^2.6.0",
    "ts-jest": "^26.5.6",
    "typescript": "^4.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testPathIgnorePatterns": [
      "./src/index.ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
